<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >
    
    <ImageView
        android:id="@+id/Wicon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="Image"
        android:background="#FFFFFF"
    />

    <TextView
        android:id="@+id/Wcity"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:gravity="bottom|right"
        android:layout_toRightOf="@+id/Wicon"
        android:shadowColor="#A888"
        android:shadowDx="0"
        android:shadowDy="0.5"
        android:shadowRadius="1"
        android:textColor="#555"
        android:textSize="15dp" 
        android:background="#00FFFFFF"/>

    <TextView
        android:id="@+id/Wweather"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:shadowColor="#AEEE"
        android:shadowDx="0"
        android:shadowDy="0.5"
        android:shadowRadius="1"
        android:textColor="#333"
        android:textSize="15dp" 
        android:background="#00FFFFFF"/>    
   
    <TextView
        android:id="@+id/Whumi"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/Wcity"
        android:shadowColor="#866A"
        android:shadowDx="0.5"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#338"
        android:textSize="27dp"
        android:background="#00FFFFFF"/>
 
    <TextView
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/Wcity"
        android:layout_toLeftOf="@+id/Whumi"
        android:shadowColor="#AAAA"
        android:shadowDx="0"
        android:shadowDy="0.5"
        android:shadowRadius="1"
        android:textColor="#CCC"
        android:textSize="24dp" 
        android:background="#00FFFFFF"
        android:text="/"/>
    
    <TextView
        android:id="@+id/Wtemp"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/Wcity"
        android:layout_toLeftOf="@+id/Whumi"
        android:shadowColor="#8A66"
        android:shadowDx="0.5"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#833"
        android:textSize="27dp"
        android:background="#00FFFFFF"/>
        
</RelativeLayout>