<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <gradient
                android:angle="270"
                android:endColor="#EEEEEE"
                android:centerColor="#FFFFFF"
                android:startColor="#EEEEEE" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="0dp"
        android:right="0dp"
        android:top="5dp">
        <shape>
            <solid android:color="#F8F8F8" />
        </shape>
    </item>
</layer-list>
